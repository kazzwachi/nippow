extends ../_layout.jade
block title
    title ロール割り当て
block content
    div#list_area
        a.btn.btn-default(href="#new") new
        table.table
            thead
                tr
                    th userid
                    th roles
            tbody#table_roles
    div#item_area
        form
            div#div_role
            div
                button#button_back.btn.btn-default(type="button") 戻る
                button#button_save.btn.btn-primary(type="button") 保存
                button#button_delete.btn.btn-danger(type="button") 削除
block scripts
    script#row_template(type="text/template").
        <td class="data_row">
            <a href="#edit/<%=_id%>"><%=userid_exp%></a>
        </td>
        <td>
            <%= roles %>
        </td>
    script#form_template(type="text/template").
        <div class="form-group">
            <label id="label_id" for="input_id">ＩＤ</label>
            <input id="input_id" class="form-control" value="<%=_id%>">
        </div>
        <div class="form-group">
            <label id="label_rev" for="input_rev">ＲＥＶ</label>
            <input id="input_rev" class="form-control" value="<%=_rev%>">
        </div>
        <div class="form-group">
            <label id="label_userid" for="input_userid">ユーザーＩＤ(認証名)</label>
            <input id="input_userid" class="form-control" value="<%=userid%>">
        </div>
        <div class="form-group">
            <label id="label_userid_exp" for="input_userid_exp">ユーザーＩＤ(共通名)</label>
            <input id="input_userid_exp" class="form-control" value="<%=userid_exp%>">
        </div>
        <div class="form-group">
            <label id="label_roles" for="input_roles">ロール(複数はカンマ区切り)</label>
            <input id="input_roles" class="form-control" value="<%=roles%>">
        </div>
    script(src="/js/rolePage.js")